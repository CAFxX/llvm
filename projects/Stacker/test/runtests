#!/bin/bash
path=$1
shift
let $((success=0))
let $((failure=0))
for tst in $* ; do
    result=`$path/$tst`
    status="$?"
    echo "Test $tst : $result"
    if [ $status -eq 0 ] ; then
        let $((success++))
    else
        let $((failure++))
    fi
done

echo "Failures : $failure"
echo "Successes: $success"
echo "Total    : $((failure+success))"
